@using EMarketApp.Core.Application.ViewModels
@model EMarketApp.Core.Application.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Sing in";
}

<main>
    <section class="container">
        <div class="row mx-auto">

            <div class="col-lg-6 col-md-8 mx-auto">
                <h1 class="fw-bold mt-4 text-center"> E Market App</h1>
                <p class="fs-3 fw-bold text-secondary mt-1 text-center">Welcome to E-Market App, log in and start
                    interacting
                    with the items.
                </p>

                <div class="col-10 mx-auto card bg-dark text-white mt-5 mb-5" style="border-radius: 1rem;">
                    <div class="card-body">

                        <h2 class="fw-bold mb-3 text-uppercase text-center mt-2">Login</h2>
                        <p class="text-white-50 fs-5 mb-3 text-center">Please enter your username and password!</p>
                        @Html.ValidationSummary(false, "",new{@class = "text-danger text-center fw-bold fs-5 mb-3"})

                        <form asp-action="Index" asp-controller="User" method="POST">

                            <div class="p-3">
                                <label asp-for="Username" class="form-label text-white"><strong>Username</strong></label>
                                <input type="text" class="form-control bg-dark text-white border-white form-control-lg"
                                    id="username" asp-for="Username" required>
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>

                            <div class="p-3 pt-0 mb-3">
                                <label asp-for="Password" class="form-label text-white"><strong>Password</strong></label>
                                <input type="password"
                                    class="form-control bg-dark text-white border-white form-control-lg" id="password"
                                    asp-for="Password" required>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <button class="btn btn-primary  btn-lg float-end" type="submit"><i class='bx bx-log-in'></i>
                                Sing in</button>
                            <a class="btn btn-light  btn-lg float-end me-2" asp-controller="User" asp-action="Register"><i
                                    class='bx bx-user-plus'></i> Sing up</a>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    <section>
</main>
